#include <stdlib.h>

int     ft_strlen(char **strs)
{
        int     i;
        int     j;
        int     compteur;

        i = 0;
        j = 0;
        compteur = 0;
        while (strs[j])
        {
                while(strs[j][i])
                {
                        i++;
                        compteur++;
                }
        j++;
        }
        return (compteur);
}

#include <unistd.h>
char    *ft_strjoin(int size,char **strs, char *sep)
{
    int    i;
    int    j;
    int    k;
    char    *tab;

    i = 0;
    j = 0;
    if (!strs)
        return (NULL);
    tab = malloc(sizeof(char) * ft_strlen(strs) + size);
    if (!tab)
        return (NULL);
    while (strs[j])
    {
        while(strs[j][k])
        {
                tab[i] = strs[j][k];
                i++;
                k++;
        }
        write(1, &sep, 1);
        k = 0;
        j++;
    }
    return (tab);
}


#include <stdio.h>
int main (void)
{
        char *strs[3] = {"salut","groot","team"};
        char *sep = "-";
        char *tab = ft_strjoin(3, strs, sep);

        printf("%s", tab);
        free(tab);
        return(0);
}
